{
  "name": "zotero-format-metadata",
  "version": "1.13.1",
  "description": "An addon for Zotero to format item metadata.",
  "config": {
    "addonName": "Linter for Zotero",
    "addonID": "zotero-format-metadata@northword.cn",
    "addonRef": "linter",
    "addonInstance": "Linter",
    "prefsPrefix": "extensions.zotero.formatmetadata",
    "releasePage": "https://github.com/northword/zotero-format-metadata/releases",
    "updateJSON": "https://raw.githubusercontent.com/northword/zotero-format-metadata/main/update.json"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "node scripts/server.mjs",
    "build": "tsc --noEmit && node scripts/build.mjs production",
    "stop": "node scripts/stop.mjs",
    "lint": "prettier --write . && eslint . --ext .ts --fix",
    "update-data": "bash scripts/update-data.sh",
    "test": "jest",
    "release": "release-it --only-version --preReleaseId=beta",
    "update-deps": "pnpm update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northword/zotero-format-metadata.git"
  },
  "author": "northword",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/northword/zotero-format-metadata/issues"
  },
  "homepage": "https://github.com/northword/zotero-format-metadata#readme",
  "packageManager": "pnpm@8.15.3",
  "dependencies": {
    "iso-locales": "1.1.1",
    "p-queue": "^8.0.1",
    "tinyld": "1.3.4",
    "zotero-plugin-toolkit": "2.3.26"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "5.0.0",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.19",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@typescript-eslint/parser": "7.0.2",
    "chokidar": "3.6.0",
    "compressing": "1.10.0",
    "esbuild": "0.20.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.2.5",
    "release-it": "17.1.1",
    "replace-in-file": "7.1.0",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3",
    "zotero-types": "1.3.18"
  }
}
