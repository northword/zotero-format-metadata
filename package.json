{
  "name": "zotero-format-metadata",
  "type": "module",
  "version": "3.0.0",
  "packageManager": "pnpm@10.30.3",
  "description": "An addon for Zotero to format item metadata.",
  "config": {
    "addonName": "Linter for Zotero",
    "addonID": "zotero-format-metadata@northword.cn",
    "addonRef": "linter",
    "addonInstance": "Linter",
    "prefsPrefix": "extensions.zotero.formatmetadata"
  },
  "author": "northword",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/northword/zotero-format-metadata#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northword/zotero-format-metadata.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-format-metadata/issues"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "eslint . && autocorrect --lint",
    "lint:fix": "eslint . --fix && autocorrect --fix",
    "update-data": "bash data/update-data.sh",
    "test": "node --run test:unit && node --run test:e2e",
    "test:e2e": "zotero-plugin test",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "release": "zotero-plugin release",
    "update-deps": "pnpx taze minor -w -i",
    "prepare": "husky"
  },
  "dependencies": {
    "csvtojson": "^2.0.14",
    "es-toolkit": "^1.44.0",
    "iso-locales": "^1.1.1",
    "p-throttle": "^8.1.0",
    "quote-quote": "^1.2.0",
    "tiny-pinyin": "^1.3.2",
    "tinyld": "^1.3.4",
    "zotero-plugin-toolkit": "5.1.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.6.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.11.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "autocorrect-node": "^2.14.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.3",
    "eslint-plugin-format": "^2.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.0",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zotero-plugin-scaffold": "^0.8.3",
    "zotero-types": "4.1.1"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "autocorrect --fix"
    ]
  }
}
